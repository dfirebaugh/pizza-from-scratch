    "es-dev-server": "^1.52.0",
    "jest": "^26.4.2",
    "rollup-plugin-filesize": "^9.0.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.1",
    "typescript": "^4.0.2"
